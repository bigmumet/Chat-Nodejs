<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Chat Application Login Register</title>

    <!-- Bootstrap -->
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- apps -->
    <link href="stylesheets/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <div class="row">
      <div class="panel panel-info">
        <!-- Default panel contents -->
        <div class="panel-heading">Chat Application</div>
        <div class="panel-body" style="height:700px;">
          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                </br>
                <% if (message.length > 0) { %>
                  <div class="alert alert-danger" role="alert"> <strong>Oh snap!</strong> <%= message %> </div>
                <% } %>
                <form class="form-horizontal" action="/login" method="POST">
                  
                  <div class="form-group">
                    <div class="col-sm-12">
                      <h3>Login</h3>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email_log_in">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="password_log_in">
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="text-center col-sm-12">
                      <button type="submit" class="btn btn-info">Sign in</button>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-12">
                      <hr/>
                    </div>
                  </div>
                 
                </form>

                <form class="form-horizontal" action="/signup" method="POST" style="margin-top:-25px;">

                  <div class="form-group">
                    <div class="col-sm-12">
                      <h3>Register</h3>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <input type="text" class="form-control" placeholder="Name" name="username">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="password">
                    </div>

                  </div>

                  <div class="form-group">
                    <div class="text-center col-sm-12">
                      <button type="submit" class="btn btn-info">Register</button>
                    </div>
                  </div>
                 
                </form>
                <br/>
            </div>
            <div class="col-md-4"></div>
          </div>
          
        </div>
      </div>
    </div>



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>